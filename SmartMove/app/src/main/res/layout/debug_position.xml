<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_empty"
                android:layout_width="134dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_android"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:text="AndroidLib" />

            <TextView
                android:id="@+id/text_android2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="GeolocLib" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_latitude"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Latitude" />

            <TextView
                android:id="@+id/latitude_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LatitudeAndroid" />

            <TextView
                android:id="@+id/latitude_geoloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LatitudeGeoloc" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_longitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Longitude" />

        <TextView
            android:id="@+id/longitude_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LongitudeAndroid" />

            <TextView
            android:id="@+id/longitude_geoloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LongitudeGeoloc" />
        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5" />
        <Switch
            android:id="@+id/switch_geoloc"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:showText="true"
            android:text="Utiliser geoloclib"
            android:textOff='OFF'
            tools:checked="false" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5" />

    </LinearLayout>

</LinearLayout>